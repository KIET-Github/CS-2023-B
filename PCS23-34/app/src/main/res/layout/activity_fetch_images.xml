<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".AddImages">
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/Fetchimg_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_car"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/Fetchimg_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/car_model_default"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/Fetchimg_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default3"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/Fetchimg_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default2"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>